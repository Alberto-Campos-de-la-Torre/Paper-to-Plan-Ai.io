{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PaperToPlan AI",
  "version": "1.0.0",
  "identifier": "com.papertoplan.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PaperToPlan AI - Gestión Inteligente de Proyectos",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "TechMain",
    "copyright": "Copyright © 2025 PaperToPlan AI",
    "category": "Productivity",
    "shortDescription": "Gestión inteligente de proyectos con IA",
    "longDescription": "PaperToPlan AI es una aplicación de gestión de proyectos potenciada por inteligencia artificial que convierte notas, imágenes y texto en planes de implementación detallados."
  }
}